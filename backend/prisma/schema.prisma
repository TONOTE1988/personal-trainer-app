generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String?  @unique
  anonymousId String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tickets  TicketLedger[]
  workouts Workout[]
}

model TicketLedger {
  id          String   @id @default(uuid())
  userId      String
  type        String
  amount      Int
  description String?
  referenceId String?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model Workout {
  id              String   @id @default(uuid())
  userId          String
  type            String
  templateId      String?
  title           String
  content         String
  params          String?
  minorEditCount  Int      @default(0)
  lastGeneratedAt DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  edits WorkoutEdit[]

  @@index([userId])
  @@index([createdAt])
}

model WorkoutEdit {
  id        String   @id @default(uuid())
  workoutId String
  editType  String
  content   String
  createdAt DateTime @default(now())

  workout Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)

  @@index([workoutId])
}

model RateLimit {
  id            String    @id @default(uuid())
  userId        String    @unique
  dailyGenCount Int       @default(0)
  lastGenAt     DateTime?
  lastResetAt   DateTime  @default(now())

  @@index([userId])
}

